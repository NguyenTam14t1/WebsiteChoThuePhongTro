<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Acreage</th>
      <th>Price</th>
      <th>Address</th>
      <th>Phone contact</th>
      <th>Status</th>
      <th>Post category</th>
      <th>Toilet type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.image %></td>
        <td><%= post.acreage %></td>
        <td><%= post.price %></td>
        <td><%= post.address %></td>
        <td><%= post.phone_contact %></td>
        <td><%= post.status %></td>
        <td><%= post.post_category %></td>
        <td><%= post.toilet_type %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
